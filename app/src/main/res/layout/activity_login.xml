<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="glory.dataskp.LoginActivity"
    android:background="@drawable/back2"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_bptk"
        android:layout_centerHorizontal="true"
        android:id="@+id/gmbrJudul"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balai Pengkajian Teknologi Pertanian"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FAFAFA"
        android:layout_below="@+id/gmbrJudul"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtjudul"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etuser"
        android:layout_below="@+id/txtjudul"
        android:layout_marginTop="20dp"
        android:hint="Username"
        android:textColor="#FAFAFA"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etpass"
        android:layout_below="@+id/etuser"
        android:layout_marginTop="5dp"
        android:hint="Password"
        android:textColor="#FAFAFA"
        android:password="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/etpass"
        android:layout_marginTop="5dp"
        android:text="Login"
        android:onClick="klikLogin"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBatal"
        android:layout_below="@+id/btnLogin"
        android:layout_marginTop="5dp"
        android:text="Batal"
        android:onClick="klikBatal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linee1"
        android:orientation="horizontal"
        android:layout_below="@+id/btnBatal"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum punya Akun ?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FAFAFA"
            android:id="@+id/txtDaftar"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnkeDaftar"
            android:text="Daftar"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_toRightOf="@+id/txtDaftar"
            android:onClick="klikDaftar"
            />

    </LinearLayout>





</RelativeLayout>
